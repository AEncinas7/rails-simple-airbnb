<h1>All our Flats (<%= @flats.count %>)</h1>

<div class="container">
  <div class="row">
      <% @flats.each do |flat| %>
        <div class="col-sm-12 col-md-3 col-lg-3">
          <div class="card" style="width: 18rem;">
            <div class="card-body">
              <h5 class="card-title"><%= flat.name %></h5>
              <p class="card-text"><%= flat.address %></p>
              <ul>
                <li>
                  <i class="fas fa-user-friends"></i><%= flat.number_of_guests %>
                  <i class="fas fa-dollar-sign"></i><%= flat.price_per_night %>
                </li>
              </ul>
            </div>
            <div class="info">
              <a href="#" class="card-link">More info</a>
            </div>
          </div>
        </div>
      <% end %>
  </div>
</div>